#  I know this is ugly but I had to brute force it.
#  Not confident enough for range() yet.
#  User_prompt is the potential pangramm
user_prompt = input("--> ")
#  Getting rid of the whitespaces
user_prompt = user_prompt.replace(' ', '')
#  Getting rid of the full stop
user_prompt = user_prompt.replace('.', '')
#  Getting rid of the colon
user_prompt = user_prompt.replace(':', '')
#  Getting rid of the exclamation mark
user_prompt = user_prompt.replace('!', '')
#  Getting rid of the question mark
user_prompt = user_prompt.replace('?', '')
#  Getting rid of the semicolon
user_prompt = user_prompt.replace(';', '')
#  Getting rid of the comma
user_prompt = user_prompt.replace(',', '')
#  Getting rid of the hyphen
user_prompt = user_prompt.replace('-', '')
#  Getting rid of the Umlauts and sharp s
user_prompt = user_prompt.replace('ä', '')
user_prompt = user_prompt.replace('ü', '')
user_prompt = user_prompt.replace('ö', '')
user_prompt = user_prompt.replace('ß', '')
#  Getting rid of the quotation marks
user_prompt = user_prompt.replace('"', '')
user_prompt = user_prompt.replace('“', '')
user_prompt = user_prompt.replace('„', '')
user_prompt = user_prompt.replace("'", '')

#  Turn all individual characters into lowercase because it doesnt matter.
user_prompt = user_prompt.lower()

#  list() turns the user_prompt miraculously into a list
#  set() gets rid of the duplicates
user_prompt_list = list(set(user_prompt))

#  Sorts my pretty list
user_prompt_list.sort()

#  If-condition for successful comparison
